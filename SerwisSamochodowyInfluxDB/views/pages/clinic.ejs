<!doctype html>
<html lang="pl">
<head>
    <%- include ("../partials/head") %>
</head>
<body class="bg-light">
<%- include ("../partials/header") %>
<main>
    <div class="container my-4">
        <div class="row my-4">
            <div class="col-12">
                <a href="/clinic/new" type="button" class="btn btn-primary">Dodaj przychodnię</a>
            </div>
        </div>
        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Nazwa</th>
                    <th scope="col">Lokalizacja</th>
                    <th scope="col">Liczba lekarzy</th>
                    <th scope="col"></th>
                </tr>
                </thead>
                <tbody>
                <% clinics && clinics.forEach(function(clinic) { %>
                <tr>
                    <th scope="row"><%= clinic.id %></th>
                    <td><%= clinic.name %></td>
                    <td><%= clinic.location %></td>
                    <td><%= clinic.doctors.length %></td>
                    <td>
                        <a class="btn btn-success" type="button" href="/clinic/id/<%= clinic.id %>">Edytuj</a>
                        <button class="btn btn-danger" type="button" data-toggle="modal" data-target="#modalDelete<%= clinic.id %>">
                            Usuń
                        </button>
                        <%- include('../partials/modalDelete', {action: `/clinic/id/${clinic.id}`, id: clinic.id}); %>
                    </td>
                </tr>
                <% }); %>
                </tbody>
            </table>
        </div>
    </div>
</main>

<%- include ("../partials/scripts") %>

</body>
</html>