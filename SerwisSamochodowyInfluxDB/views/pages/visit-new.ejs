<!doctype html>
<html lang="pl">
<head>
    <%- include ("../partials/head") %>
</head>
<body class="bg-light">
<%- include ("../partials/header") %>
<main>
    <div class="container my-4">
        <form method="POST" enctype="application/x-www-form-urlencoded">
            <input type="hidden" name="doctorID" value="<%= doctor.id %>">
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="firstName">Imię</label>
                    <input type="text" class="form-control" id="firstName" name="firstName" value="<%= doctor.firstName %>" readonly>
                </div>
                <div class="form-group col-md-6">
                    <label for="lastName">Nazwisko</label>
                    <input type="text" class="form-control" id="lastName" name="lastName" value="<%= doctor.lastName %>" readonly>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="date">Data</label>
                    <input type="text" class="form-control" id="date" name="date" required>
                </div>
                <div class="form-group col-md-6">
                    <label for="type">Wizyta w ramach</label>
                    <select id="type" name="type" class="custom-select" required>
                        <option value="NFZ">NFZ</option>
                        <option value="Prywatna">Prywatna</option>
                    </select>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-sm-6">
                    <label>Specjalizacje:</label>
                    <% doctor.specializations && doctor.specializations.forEach(function(spec) { %>
                    <div class="custom-control custom-radio">
                        <input type="radio" class="custom-control-input" id="<%= spec %>" name="specializations" value="<%= spec %>">
                        <label class="custom-control-label" for="<%= spec %>"><%= spec %></label>
                    </div>
                    <% }); %>
                </div>
                <div class="form-group col-sm-6">
                    <label>Przychodnie:</label>
                    <% doctor.clinics && doctor.clinics.forEach(function(clinic) { %>
                    <div class="custom-control custom-radio">
                        <input type="radio" class="custom-control-input" id="<%= clinic.id %>" name="clinic" value="<%= clinic.id %>;<%= clinic.name %>">
                        <label class="custom-control-label" for="<%= clinic.id %>"><%= clinic.name %></label>
                    </div>
                    <% }); %>
                </div>
            </div>
            <div class="d-flex flex-row-reverse">
                <button type="submit" class="btn btn-primary">Utwórz</button>
            </div>
        </form>
    </div>
</main>

<%- include ("../partials/scripts") %>

</body>
</html>