<!doctype html>
<html lang="pl">
<head>
    <%- include ("../partials/head") %>
</head>
<body class="bg-light">
<%- include ("../partials/header") %>
<main>
    <div class="container my-4">
        <form method="POST" enctype="application/x-www-form-urlencoded">
            <input type="hidden" name="_method" value="PUT">
            <input type="hidden" name="id" value="<%= clientDetails.id %>">
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="clientFirstName">ImiÄ™</label>
                    <input type="text" class="form-control" id="clientFirstName" name="firstName" value="<%= clientDetails.firstName %>" required>
                </div>
                <div class="form-group col-md-6">
                    <label for="clientLastName">Nazwisko</label>
                    <input type="text" class="form-control" id="clientLastName" name="lastName" value="<%= clientDetails.lastName %>" required>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="phone">Telefon</label>
                    <input type="tel" class="form-control" id="phone" name="phone" value="<%= clientDetails.phone %>" required>
                </div>
                <div class="form-group col-md-6">
                    <label for="email">Email</label>
                    <input type="text" class="form-control" id="email" name="email" value="<%= clientDetails.email %>" required>
                </div>
            </div>
            <div class="d-flex flex-row-reverse">
                <button type="submit" class="btn btn-primary">Edytuj</button>
            </div>
        </form>
    </div>
</main>

<%- include ("../partials/scripts") %>

</body>
</html>