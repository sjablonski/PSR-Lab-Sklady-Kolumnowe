<!doctype html>
<html lang="pl">
<head>
    <%- include ("../partials/head") %>
</head>
<body class="bg-light">
<%- include ("../partials/header") %>
<main>
    <div class="container my-4">
        <div class="row my-4">
            <div class="col-12">
                <a href="/employee/new" type="button" class="btn btn-primary">Dodaj pracownika</a>
            </div>
        </div>
        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Imię</th>
                    <th scope="col">Nazwisko</th>
                    <th scope="col"></th>
                </tr>
                </thead>
                <tbody>
                <% employees && employees.forEach(function(employee) { %>
                <tr>
                    <th scope="row"><%= employee.id %></th>
                    <td><%= employee.firstname %></td>
                    <td><%= employee.lastname %></td>
                    <td>
                        <a class="btn btn-success" type="button" href="/employee/id/<%= employee.id %>">Edytuj</a>
                        <button class="btn btn-danger" type="button" data-toggle="modal" data-target="#modalDelete<%= employee.id %>">
                            Usuń
                        </button>
                        <%- include('../partials/modalDelete', {action: `/employee/id/${employee.id}`, id: employee.id}); %>
                    </td>
                </tr>
                <% }); %>
                </tbody>
            </table>
        </div>
    </div>
</main>

<%- include ("../partials/scripts") %>

</body>
</html>